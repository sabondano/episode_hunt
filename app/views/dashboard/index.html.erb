<div class="container container-dashboard">
  <div class="row">
    <div class="col-sm-3">
      <div class="dashboard-profile-card">
        <div class="row">
          <div class="col-sm-12">
            <img class="thumbnail avatar" src="<%= current_user.profile_image_url %>"> 
            <div class="user-fields">
              <h4><%= current_user.name %></h4>
              <p class="text-muted screen-name">@<%= current_user.screen_name %></p>
            </div>
          </div>
        </div>
        <div class="row stats">
          <div class="col-sm-4">
            <div class="first-stat-group">
              <span class="stat-label">UPVOTES</span>
              <span class="stat-value">237</span>
            </div>
          </div>
          <div class="col-sm-4">
            <span class="stat-label">SUBMITTED</span>
            <span class="stat-value"><%= @episodes.count %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="episode episode-submission-form">
        <%= form_tag('/episodes') do %>
          <%= label_tag "episode", "Select an episode:", class: "control-label" %>
          <%= select_tag "episode", options_for_select(@rr_episode_titles), class: "form-control" %>
          <%= submit_tag "Submit Episode", class: "btn btn-default btn-submit-episode" %>
        <% end %>
      </div> <!-- /episode-submission-form -->

      <% if @episodes.empty? %>
        <div class="episode text-center text-muted">
          You haven't submitted any episodes yet...
        </div>
      <% else %>
        <% @episodes.each do |episode| %>
          <div class="episode">
            <div class="row">
              <div class="col-sm-1 upvotes">
                <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                <span class="upvote-value">45</span>
              </div>
              <div class="col-sm-2">
                <img class="thumbnail-podcast" src="https://s3.amazonaws.com/devchat.tv/ruby-rogues-thumb.jpg" style="height: 110px; width: 110px;">
              </div>
              <div class="col-sm-9">
                <h3 class="episode-title">
                  <%= episode.title %>
                </h3>
                <span class="episode-details">
                  <strong>Published on:</strong> <%= episode.published_date %> |
                  <strong>Duration:</strong> <%= episode.duration %>
                  <audio controls>
                    <source src="<%= episode.audio_url %>" type="audio/mpeg">
                  </audio>
                </span>
              </div>
            </div>
          </div> <!-- /episode -->
        <% end %>
      <% end %>
    </div>
  </div>
