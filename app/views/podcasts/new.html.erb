<div class="container container-dashboard">
  <div class="row">
    <div class="col-sm-3">
      <%= render 'shared/profile_card' %>
    </div>
    <div class="col-sm-9">
      <%= render partial: 'shared/submission_form.html.erb' %>
      <div class="episode podcast-suggestion-form">
        <%= form_tag podcast_suggestions_path do %>
          <%= label_tag "podcast suggestion",
                        "What podcast would you like to suggest?",
                        class: "control-label" %>
          <%= text_field_tag "podcast suggestion", "", class: "form-control" %>
          <%= button_tag 'Send Suggestion', class: "btn btn-default btn-submit-podcast-suggestion" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
