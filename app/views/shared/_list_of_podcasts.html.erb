<% if @all_podcasts.empty? %>
  <div class="episode text-center text-muted">
    You haven't submitted any podcasts yet...
  </div>
<% else %>
  <% @all_podcasts.each do |podcast| %>
    <%= link_to podcast_path(podcast) do %>
      <div class="episode">
        <div class="row">
          <div class="col-sm-2">
            <img class="thumbnail-podcast" src="<%= podcast.image %>" style="height: 110px; width: 110px;">
          </div> 
          <div class="col-sm-10">
            <h3 class="episode-title"><%= podcast.name %></h3>
            <%= link_to "View Episodes", podcast_path(podcast), class: "btn btn-default btn-lg btn-view-episodes" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
